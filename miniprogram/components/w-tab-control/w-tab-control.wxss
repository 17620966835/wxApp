/* components/w-tab-control/w-tab-control.wxss */
.tab-control{
  display: flex;
  background: #fff;
  margin-bottom: 16rpx;
  padding-bottom: 10rpx;
}
.tab-item{
  flex:1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}
.active{
  color: red;
}
.active text{
  padding: 20rpx 16rpx;
  border-bottom: 6rpx solid red;
}